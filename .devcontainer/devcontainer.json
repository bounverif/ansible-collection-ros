// .devcontainer/devcontainer.json
{
  "name": "Ansible",
  "dockerFile": "Dockerfile",
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined",
    "--rm"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "redhat.ansible",
        "GitHub.copilot"
      ]
    },
    "settings": {
      "terminal.integrated.defaultProfile.linux": "bash",
      "ansible.python.interpreterPath": "/usr/bin/python3"
    }
  },
  "remoteUser": "bouncmpe"
}